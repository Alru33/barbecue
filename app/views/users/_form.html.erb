<%= form_for @user, html: {multipart: true} do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: @user } %>

  <div class="form-group">
    <%= f.label :name, class: "col-2 col-form-label font-weight-bold" %>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control shadow rounded" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-2 col-form-label font-weight-bold" %>
    <div class="col-10">
      <%= f.text_field :email, class: "form-control shadow rounded" %>
     </div>
  </div>

  <div class="form-group">
    <div class="col-10 mt-4">
      <%= f.submit t('.save'), class: 'btn btn-primary' %>
      <%= link_to t('.back'), :back, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>