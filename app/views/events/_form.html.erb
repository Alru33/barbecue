<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-group">
    <%= f.label :title, class: "col-form-label font-weight-bold" %>
    <%= f.text_field :title, class: 'form-control shadow rounded' %>
  </div>

  <div class="form-group">
    <%= f.label :address, class: "col-form-label font-weight-bold" %>
    <%= f.text_field :address, class: 'form-control shadow rounded' %>
  </div>

  <div class="form-group">
    <%= f.label :datetime, class: "col-form-label font-weight-bold" %>
    <p><%= f.datetime_select :datetime, class: 'form-control shadow rounded' %></p>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-form-label font-weight-bold" %>
    <%= f.text_area :description, class: 'form-control shadow rounded' %>
  </div>

  <div class="form-group mb-4">
    <%= f.submit t('events.form.save'), class: 'btn btn-primary' %>
    <%= t('.or') %>
    <%= link_to t('events.form.back'), :back %>
  </div>
<% end %>
