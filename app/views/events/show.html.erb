<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '', class: 'event-background', style: "background-image:
      url(#{asset_pack_path('media/images/event.jpg')})" %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h2><%= @event.title %></h2>
            <h4><%= l @event.datetime, format: :short %></h4>
            <h4><small><%= link_to @event.address,
              "https://yandex.ru/maps/?text=#{@event.address}" %></small></h4>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
            <div class="buffer-both">
              <div class="col-8">
                <%= link_to t('.edit'), edit_event_path(@event), class: 'btn
                  btn-primary' %>
                <%= link_to t('.delete'), event_path(@event), class: 'btn btn-danger',
                  method: :delete, data: { confirm: I18n.t('delete.event') } %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="event-comments buffer-top">
        <%= render partial: 'comments/form',
          locals: {comment: @new_comment || @event.comments.build} %>
      </div>

      <div class="buffer-both">
        <%= render partial: 'comments/comment',
          collection: @event.comments.except(@new_comment) %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="event-owner">
        <h5>Зовет:</h5>
        <p><%= render partial: 'users/user', object: @event.user %></p>
      </div>
      <div class="event-subscriptions">
        <h5>Пойдут:</h5>
        <div>
          <p>
            <%= render partial: 'subscriptions/subscription', collection:
              @event.subscriptions.except(@new_subscription) %>
          </p>
        </div>
      </div>

      <% unless current_user_can_edit?(@event) %>
        <div class="event-subscription-form">
          <h5>Я пойду:</h5>
          <div>
            <%= render partial: 'subscriptions/form', locals: {
              subscription: @new_subscription || @event.subscriptions.build } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
