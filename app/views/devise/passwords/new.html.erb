<div class="container">
  <div class="col-10">
    <h3 class="col-10 mt-4 mb-4">Забыли пароль?</h3>


    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="col-12">
        <%= render partial: 'partials/form_errors', locals: { model: @user } %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-2 col-form-label font-weight-bold" %>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder:
            "Введите email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-10 mt-4">
          <%= f.submit "Восстановить пароль", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <div class="col-10 mt-4 mb-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>