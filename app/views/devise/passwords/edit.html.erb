<div class="row">
  <div class="col-10">
    <h4 class="col-2 mt-4 mb-8"><%= t('devise.passwords.edit.change_my_password') %></h4>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <div class="form-group">
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
      </div>

      <div class="form-group">
        <%= f.label :password, t('.new_password'), class: "col-6 col-form-label font-weight-bold" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: t('.new_password') %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t('.confirm_new_password'), class: "col-8 col-form-label font-weight-bold" %>
        <div class="col-10">
         <%= f.password_field :password_confirmation, class: "form-control shadow rounded", placeholder: t('.new_password') %>
        </div>
      </div>

      <div class="form-group">
        <div class="form-group">
          <%= f.submit t('.change_my_password'), class: "btn btn-primary"  %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
