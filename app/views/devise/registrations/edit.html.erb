<div class="row">
  <div class="col-10">
    <h3 class="col-8 mt-4 mb-4"><%= t('devise.registrations.edit.change_password') %></h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="col-12">
        <%= render partial: 'partials/form_errors', locals: { model: @user } %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-2 col-form-label font-weight-bold" %>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder:
            t('.enter_your_email') %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="col-10 mt-4">
        <p><u><%= t('.remain_field') %></u></p>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-2 col-form-label font-weight-bold"  %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow rounded",
            placeholder: t('.enter_your_new_password') %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-4 col-form-label font-weight-bold" %>
        <div class="col-10">
          <%= f.password_field :password_confirmation, class: "form-control shadow rounded",
            placeholder: t('.confirm_your_new_password') %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :current_password, class: "col-4 col-form-label font-weight-bold" %>
        <div class="col-10">
          <%= f.password_field :current_password, class: "form-control shadow rounded",
            placeholder: t('.enter_your_password') %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-10 mt-4">
          <%= f.submit t('.update'), class: "btn btn-primary" %>
          <%= link_to t('.back'), edit_user_path(@user), class: 'btn btn-secondary' %>
        </div>
      </div>
    <% end %>

    <h3 class="col-8 mt-4 mb-4"><%= t('.delete_account')%></h3>
    <div class="col-10 mt-2 mb-4">
      <%= button_to t('.delete'), registration_path(resource_name), class: "btn
        btn-danger",
        data: { confirm: t('.are_you_sure') }, method: :delete %>
    </div>
  </div>
</div>
