<div class="row">
  <div class="col-10">
    <h3 class="col-10 mt-4 mb-4"><%= t('devise.sessions.new.user_registration') %></h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="col-12">
        <%= render partial: 'partials/form_errors', locals: { model: @user } %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-2 col-form-label font-weight-bold" %>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder:
            t('.enter_your_email') %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-2 col-form-label font-weight-bold" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow rounded",
            placeholder: t('.enter_your_password') %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-4 col-form-label
        font-weight-bold" %>
        <div class="col-10">
          <%= f.password_field :password_confirmation, class: "form-control shadow rounded",
            placeholder: t('.confirm_your_password') %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-10 mt-4">
          <%= f.submit t('.sign_in'), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <div class="col-10 mt-4 mb-4">
      <%= render "devise/shared/links" %>
      <%= link_to t('.forgot_your_password'), new_password_path(resource_name) %>
    </div>
  </div>
</div>
