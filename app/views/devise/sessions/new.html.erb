<div class="container">
  <div class="col-10">
    <h3 class="col-10 mt-4 mb-4">Войти</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "col-2 col-form-label font-weight-bold" %>
        <div class="col-10">
           <%= f.email_field :email, class: "form-control shadow rounded", placeholder:
              "Введите email" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-2 col-form-label font-weight-bold"  %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder:
            "Введите пароль" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check">
          <div class="col-10">
            <%= f.check_box :remember_me, class: "form-check-input shadow rounded" %>
          </div>
          <%= f.label :remember_me, class: "col-3 form-check-label font-weight-bold"  %>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-10 mt-4">
          <%= f.submit t('.enter'), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <div class="col-10 mt-4 mb-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
