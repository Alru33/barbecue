<%= form_for [@event, subscription] do |f| %>
  <%= render partial: 'partials/form_errors' , locals: { model: subscription } %>
  <% unless user_signed_in? %>
    <div class="form-group mt-4">
      <strong><%= f.label :user_name %></strong>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <strong><%= f.label :user_email %></strong>
      <%= f.text_field :user_email, class: 'form-control' %>
    </div>
  <% end %>

  <% unless current_user_can_edit?(@event) %>
      <div class="actions">
        <%= f.submit t('.subscribe'), class: 'btn btn-primary' %>
      </div>
  <% end %>
<% end %>
